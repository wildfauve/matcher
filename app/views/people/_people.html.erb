<% if @filter %>
  <dl class="sub-nav">
   <dt>Score Filter</dt>
   <dd class="active">
     <%= @filter %>
   </dd>
  </dl>
<% end %>

<% @people.each do |person|%>
  <div class="panel">
   <div class="row">
      <div class="small-1 columns">
         <i class="fi-<%=type_icon(person.type) %> size-30"></i>
      </div>
      <div class="small-11 columns">
         <h5><%= link_to person.full_name, person_path(person), remote: true %></h5>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
         <dl class="sub-nav">
           <dt>Filtered Match</dt>
           <dd class="active">
              <%= link_to person.matches.filtered_match.count, person_matches_path(person, filtered: true), remote: true%>
           </dd>
           <dt>Total Match</dt>
           <dd class="active">
              <%= link_to person.matches.count, person_matches_path(person, filtered: false), remote: true%>
           </dd>           
         </dl>
      </div>
   </div>
   <div class="row">
     <dl class="sub-nav">
       <dt>Decisions</dt>
       <dd class="active">
          <%= link_to person.match_decisions_count, "#"%>
       </dd>
     </dl>
     
   </div>
 </div>
   
<% end %>


<%= will_paginate @people, renderer: FoundationPagination::Rails %>
